{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "App": "writable",
        "config": "readonly",
        "http": "writable"
    },
    "extends": ["eslint:recommended", "plugin:import/errors"],
    "plugins": ["import"],
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "rules": {
        "no-case-declarations": 0,
        "no-unused-vars": 1,
        "no-control-regex": 0,
        "quotes": ["error", "single"],
        "no-fallthrough": "off",
        "lines-around-comment": [
            "error",
            {
                "beforeLineComment": true,
                "beforeBlockComment": true,
                "afterLineComment": false,
                "allowBlockStart": true,
                "allowObjectStart": true,
                "allowArrayStart": true,
                "allowClassStart": true
            }
        ],
        "line-comment-position": [
            "error",
            {
                "position": "above"
            }
        ],
        "spaced-comment": [
            "error",
            "always",
            {
                "line": {
                    "markers": ["/"],
                    "exceptions": ["-", "+"]
                },
                "block": {
                    "markers": ["!"],
                    "exceptions": ["*"],
                    "balanced": true
                }
            }
        ],
        "brace-style": [
            "error",
            "allman",
            {
                "allowSingleLine": true
            }
        ],
        "no-multi-spaces": "error",
        "no-regex-spaces": "error",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1,
                "maxEOF": 0
            }
        ],
        "no-redeclare": "error",
        "import/newline-after-import": [
            "error",
            {
                "count": 1
            }
        ],
        "one-var-declaration-per-line": ["error", "always"],
        "no-trailing-spaces": [
            "error",
            {
                "skipBlankLines": true
            }
        ],
        "object-curly-spacing": [
            "error",
            "always",
            {
                "objectsInObjects": true
            }
        ],
        "key-spacing": [
            "error",
            {
                "mode": "strict"
            }
        ],
        "comma-dangle": ["error", "never"],
        "space-unary-ops": 2,
        "space-infix-ops": "error",
        "no-var": "error",
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "array-bracket-newline": [
            "error",
            {
                "multiline": true,
                "minItems": 4
            }
        ],
        "array-element-newline": [
            "error",
            {
                "multiline": true,
                "minItems": 4
            }
        ],
        "block-spacing": "error",
        "no-floating-decimal": "error",
        "no-lone-blocks": "error",
        "no-mixed-spaces-and-tabs": ["error"],
        "semi": "error",
        "no-extra-semi": "error",
        "semi-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "object-property-newline": [
            "error",
            {
                "allowAllPropertiesOnSameLine": true
            }
        ],
        "prefer-const": "error"
    }
}
